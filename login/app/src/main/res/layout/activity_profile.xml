    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:text="List of Parking"
        android:id="@+id/parkingList"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_baseline_format_list_bulleted_24"
        android:paddingLeft="20dp"
        android:layout_marginLeft="-10dp"
        android:layout_below="@+id/info"
        android:layout_marginTop="50dp"
        android:layout_marginStart="100dp"/>

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:text="Add parking"
        android:id="@+id/addParking"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_baseline_local_parking_24"
        android:paddingLeft="20dp"
        android:layout_marginLeft="-10dp"
        android:layout_below="@+id/parkingList"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"/>


    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:text="Edit Profile"
        android:id="@+id/editProfile"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_edit"
        android:paddingLeft="20dp"
        android:layout_marginLeft="-10dp"
        android:layout_below="@+id/addParking"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        />

    <TextView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn"
        android:text="Change password"
        android:id="@+id/changePassword"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:drawableLeft="@drawable/ic_lock"
        android:paddingLeft="20dp"
        android:layout_marginLeft="-10dp"
        android:layout_below="@+id/editProfile"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        />


